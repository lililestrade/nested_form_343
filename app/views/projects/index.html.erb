<div class="container">
  <h1 class="text-center">Projects</h1>
  <%= link_to "New project", new_project_path, class: "btn btn-success" %>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-8 offset-md-2a">
        <h2><%= project.name %></h2>
        <p><%= project.description %></p>
        <ul>
          <% project.tasks.each do |task| %>
            <li><%= task.name %></li>
          <% end %>
        </ul>
      </div>
      <hr>
    <% end %>
  </div>
</div>
